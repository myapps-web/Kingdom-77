# Environment Variables Example
# Copy this to .env and fill in your values (do NOT commit .env file)

# Required - Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Required - Your Discord User ID (for /dashboard access)
BOT_OWNER_ID=your_discord_user_id_here

# Optional - Server ID for fast command sync (recommended for single server)
GUILD_ID=your_server_id_here

# Optional - Development Mode (for local testing)
DEV_MODE=true
DEV_GUILD_ID=your_test_server_id_here

# MongoDB Connection (v3.0 - required for dev branch)
# Get your connection string from MongoDB Atlas (see docs/MONGODB_SETUP.md)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=kingdom77_bot

# Redis Cache (v3.0 - optional, improves performance)
# Get free Redis from https://redis.com/try-free/
# Format: redis://default:password@host:port or rediss://... for SSL
REDIS_URL=redis://default:password@hostname:port

# ==================== Payment Provider Configuration (v3.8) ====================

# Payment Provider Selection
# Options: "stripe" (international) or "moyasar" (Saudi Arabia/GCC)
PAYMENT_PROVIDER=moyasar
PAYMENT_CURRENCY=SAR

# Stripe Payment Gateway (for international users)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Moyasar Payment Gateway (for Saudi Arabia & GCC)
# Get keys from: https://dashboard.moyasar.com
MOYASAR_API_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
MOYASAR_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
MOYASAR_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# ==================== Email Notifications (v3.7) ====================

# Resend Email Service
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=Kingdom-77 <notifications@yourdomain.com>
REPLY_TO_EMAIL=support@yourdomain.com
DASHBOARD_URL=https://yourdomain.com

# ==================== Social Media APIs (v4.0 - Phase 5.7) ====================
# Required for Social Integration System
# All APIs are optional - bot will work without them

# YouTube Data API v3
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# Twitch API
# Get from: https://dev.twitch.tv/console/apps
# Required Scopes: user:read:email, channel:read:subscriptions
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Kick API
# Get from: https://kick.com/dashboard/settings/api
# Note: Kick API is in beta, may require approval
KICK_API_KEY=your_kick_api_key_here

# Twitter API v2 (X)
# Get from: https://developer.twitter.com/en/portal/dashboard
# Required: Elevated access for recent tweets
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_token_secret_here

# Instagram Graph API
# Get from: https://developers.facebook.com/apps/
# Required: Instagram Basic Display API
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_long_lived_token_here

# TikTok API
# Get from: https://developers.tiktok.com/apps/
# Required: Display API access
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Snapchat API
# Get from: https://kit.snapchat.com/manage/
# Required: Snap Kit access
SNAPCHAT_CLIENT_ID=your_snapchat_client_id_here
SNAPCHAT_CLIENT_SECRET=your_snapchat_client_secret_here

# ==================== API Rate Limiting (v4.0) ====================
# Rate limits per tier (requests per minute)
RATE_LIMIT_FREE=60
RATE_LIMIT_BASIC=120
RATE_LIMIT_PREMIUM=300

# ==================== JWT & Security (v4.0) ====================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 hours

SESSION_SECRET=your_secure_session_secret_here

# ==================== Additional Configuration ====================
# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# DeepL API (for advanced translation)
DEEPL_API_KEY=your_deepl_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_WEBHOOK_URL=your_discord_webhook_url_for_logs_here

# Cache TTL (seconds)
CACHE_TTL=300
