# Environment Variables Example
# Copy this to .env and fill in your values (do NOT commit .env file)

# Required - Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Required - Your Discord User ID (for /dashboard access)
BOT_OWNER_ID=your_discord_user_id_here

# Optional - Server ID for fast command sync (recommended for single server)
GUILD_ID=your_server_id_here

# Optional - Development Mode (for local testing)
DEV_MODE=true
DEV_GUILD_ID=your_test_server_id_here

# MongoDB Connection (v3.0 - required for dev branch)
# Get your connection string from MongoDB Atlas (see docs/MONGODB_SETUP.md)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=kingdom77_bot

# Redis Cache (v3.0 - optional, improves performance)
# Get free Redis from https://redis.com/try-free/
# Format: redis://default:password@host:port or rediss://... for SSL
REDIS_URL=redis://default:password@hostname:port

# ==================== Payment Provider Configuration (v3.8) ====================

# Payment Provider Selection
# Options: "stripe" (international) or "moyasar" (Saudi Arabia/GCC)
PAYMENT_PROVIDER=moyasar
PAYMENT_CURRENCY=SAR

# Stripe Payment Gateway (for international users)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Moyasar Payment Gateway (for Saudi Arabia & GCC)
# Get keys from: https://dashboard.moyasar.com
MOYASAR_API_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
MOYASAR_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
MOYASAR_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# ==================== Email Notifications (v3.7) ====================

# Resend Email Service
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=Kingdom-77 <notifications@yourdomain.com>
REPLY_TO_EMAIL=support@yourdomain.com
DASHBOARD_URL=https://yourdomain.com
